        <select id="createUser" resultType="User">
            INSERT INTO inprog.users(authority_id, first_name, last_name, login, password, middle_name)
            VALUES (#{authorities}, #{firstName}, #{lastName}, #{login}, #{password}, #{middleName})
            RETURNING user_id as id,
                      first_name,
                      last_name,
                      middle_name,
                      authority_id as authority,
                      login,
                      password
        </select>

        <select id="getUserById" resultType="User">
            SELECT user_id as id,
                   first_name,
                   last_name,
                   middle_name,
                   authority_id as authority,
                   login,
                   password
            FROM inprog.users
            WHERE user_id = #{id}
        </select>

        <select id="listUsers" resultType="User">
            SELECT user_id as id,
                   first_name,
                   last_name,
                   middle_name,
                   authority_id as authority,
                   login,
                   password
            FROM inprog.users
        </select>

        <delete id="deleteUser">
            DELETE
            FROM inprog.users
            WHERE user_id = #{id}
        </delete>

    </mapper>